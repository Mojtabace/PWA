{
  "name": "My PWA App",
  "short_name": "MyApp",
  "description": "An example of a Progressive Web Application using manifest.json.",
  "id": "TRVBPIOS",
  "lang": "fa",
  "dir": "auto",
  
  "start_url": "/index.html",
  "scope": "/",
  "display": "standalone",
  "display_override": [
    "browser",
    "fullscreen",
    "minimal-ui",
    "standalone",
    "window-controls-overlay"
  ],
  "orientation": "portrait",
  
  "background_color": "#ffffff",
  "theme_color": "#6200EE",

  "icons": [
    {
      "src": "icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],

  "screenshots": [
    {
      "src": "screenshot1.png",
      "sizes": "640x480",
      "type": "image/png"
    },
    {
      "src": "screenshot2.png",
      "sizes": "1280x720",
      "type": "image/png"
    }
  ],

  "categories": [
    "games",
    "music"
  ],

  "shortcuts": [
    {
      "name": "Open Dashboard",
      "short_name": "Dashboard",
      "description": "Quick access to the Dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "shortcut-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],

  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.example.myapp",
      "id": "com.example.myapp"
    }
  ],
  "prefer_related_applications": false,

  "protocol_handlers": [
    {
      "protocol": "web+myapp",
      "url": "/?data=%s"
    }
  ],

  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png"],
        "text/plain": [".txt"],
        "application/pdf": [".pdf"]
      }
    }
  ],

  "share_target": {
    "action": "/share-receiver",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "shareTitle",
      "text": "shareText",
      "url": "shareUrl",
      "files": [
        {
          "name": "sharedFile",
          "accept": ["image/*", "application/pdf", "text/plain"]
        }
      ]
    }
  },

  "edge_side_panel": {
    "preferred_width": 1
  },

  "iarc_rating_id": "RTJUPIS",

  "handle_links": "all"
}
